{
  "name": "Hugo Blog",
  "image": "klakegg/hugo:ext-alpine",
  "postCreateCommand": "git submodule update --init --recursive",
  "portsAttributes": {
    "1313": {
      "label": "Hugo Server",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "bungcip.better-toml",
        "davidanson.vscode-markdownlint",
        "golang.go"
      ]
    }
  }
}
